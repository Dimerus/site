      { rank: 50, country: "Эфиопия", gdp: 180, region: "Африка" }
    ];

    const tableBody = document.getElementById('table-body');
    let currentSort = { column: 0, direction: 'asc' };

    function renderTable(data) {
      tableBody.innerHTML = '';
      data.forEach(item => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${item.rank}</td>
          <td>${item.country}</td>
          <td class="gdp-value">${item.gdp.toLocaleString()}</td>
          <td>${item.region}</td>
        `;
        tableBody.appendChild(row);
      });
    }

    function sortTable(columnIndex) {
      const direction = currentSort.column === columnIndex && currentSort.direction === 'asc' ? 'desc' : 'asc';
      currentSort = { column: columnIndex, direction };

      const sortedData = [...gdpData].sort((a, b) => {
        let valA, valB;
        if (columnIndex === 0) {
          valA = a.rank;
          valB = b.rank;
        } else if (columnIndex === 1) {
          valA = a.country;
          valB = b.country;
        } else if (columnIndex === 2) {
          valA = a.gdp;
          valB = b.gdp;
        } else {
          valA = a.region;
          valB = b.region;
        }

        if (typeof valA === 'string') {
          return direction === 'asc' ? valA.localeCompare(valB) : valB.localeCompare(valA);
        } else {
          return direction === 'asc' ? valA - valB : valB - valA;
        }
      });

      renderTable(sortedData);
    }

    function filterTable() {
      const searchTerm = document.getElementById('search').value.toLowerCase();
      const regionFilter = document.getElementById('region-filter').value;
      
      const filteredData = gdpData.filter(item => {
        const matchesSearch = item.country.toLowerCase().includes(searchTerm);
        const matchesRegion = regionFilter === '' || item.region === regionFilter;
        return matchesSearch && matchesRegion;
      });

      renderTable(filteredData);
    }

    document.getElementById('search').addEventListener('input', filterTable);
    document.getElementById('region-filter').addEventListener('change', filterTable);

    // Изначальная отрисовка
    renderTable(gdpData);
  </script>
